<h1>registrations</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control mt-1", placeholder: "Email" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control mt-1", placeholder: "Password" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation %>

    <%= form.password_field :password_confirmation, class: "form-control mt-1", placeholder: "Password confirmation" %>
  </div>

<% end %>